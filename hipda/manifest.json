{
  "name": "Hi-PDA Helper",
  "version": "0.8",
  "description": "Hi-PDA Helper Extension",
  "permissions": ["activeTab", "storage"],

  "background": {
    "scripts": ["jquery3.js", "gbk.js", "background.js"]
  },
  "omnibox": { "keyword": "hi" },

  "icons": {
    "16": "images/16x.png",
    "32": "images/32x.png",
    "48": "images/48x.png",
    "128": "images/128x.png"
  },
  "manifest_version": 2,

  "browser_action": {
    "default_title": "Hi-PDA Helper Extension",
    "default_popup": "popup/popup.html"
  },

  "options_ui": {
    "page": "popup/popup.html",
    "open_in_tab": false
  },

  "content_scripts": [
    {
      "matches": ["https://www.4d4y.com/forum/*"],
      "js": ["jquery3.js", "gbk.js", "contentscript.js", "topcolor.js"],
      "run_at": "document_start"
    }
  ],

  "web_accessible_resources": ["main.js"],

  "content_security_policy": "script-src 'self'; object-src 'self'"
}
